{% extends "layout.jinja2" %}
{% block body %}
<article>
<h1>{{entry.title}}</h1>
<hr/>
<p>{{entry.body}}</p>
<hr/>

<p>Created <strong title="{{entry.created}}">{{entry.created}}</strong></p>

<a href="{{ request.route_url('action', action='edit', _query=(('id',entry.id),)) }}"> Edit Entry</a>

</article>
{% endblock %}
